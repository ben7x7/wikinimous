<div class="container">
  <div class="wrapper wrapper-index">
    <div class="title text-center">
      <h1>Articles' list</h1>
    </div>
    <div class="index">
      <% @articles.each do |article| %>
        <%= link_to article_path(article) do %>
          <h3><%= article.title %></h3>
        <% end %> <br>
        <%= article.content %>
        <hr>
      <% end %>
    </div>
  </div>
</div>

